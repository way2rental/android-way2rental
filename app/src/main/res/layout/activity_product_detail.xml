<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ProductDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Way2Rental.AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_detail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@id/toolbar_detail">

            <ImageView
                android:id="@+id/iv_product_detail_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                tools:src="@drawable/ic_image_placeholder"
                app:layout_collapseMode="parallax" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_detail"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/Theme.Way2Rental.PopupOverlay" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:clipToPadding="false">

            <!-- Basic Info & Primary Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/tv_product_detail_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    tools:text="Luxury 3BHK Penthouse with Ocean View" />

                <TextView
                    android:id="@+id/tv_product_detail_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:layout_marginTop="4dp"
                    android:textColor="?android:attr/textColorSecondary"
                    tools:text="123 Ocean Drive, Sunny Isles, FL" />

                <TextView
                    android:id="@+id/tv_product_detail_primary_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="?attr/colorPrimary"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    tools:text="â‚¹50,000 per month" />
                
                <TextView
                    android:id="@+id/tv_product_detail_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceCaption"
                    android:layout_marginTop="4dp"
                    android:textStyle="italic"
                    tools:text="Status: AVAILABLE" />
            </LinearLayout>

            <!-- Key Features Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:srcCompat="@drawable/ic_bed"
                            app:tint="?attr/colorPrimary"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:id="@+id/tv_product_detail_beds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBody2"
                            tools:text="3 Beds" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:srcCompat="@drawable/ic_bath"
                            app:tint="?attr/colorPrimary"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:id="@+id/tv_product_detail_baths"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBody2"
                            tools:text="2 Baths" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                         <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:srcCompat="@android:drawable/ic_menu_sort_by_size" 
                            app:tint="?attr/colorPrimary"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:id="@+id/tv_product_detail_floor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBody2"
                            tools:text="15th Floor" />
                    </LinearLayout>

                     <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                         <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:srcCompat="@android:drawable/ic_menu_crop" 
                            app:tint="?attr/colorPrimary"
                            android:layout_marginBottom="4dp"/>
                        <TextView
                            android:id="@+id/tv_product_detail_area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?attr/textAppearanceBody2"
                            tools:text="1200 SqFt" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <!-- Description -->
            <LinearLayout style="@style/DetailSectionContainer">
                <TextView style="@style/DetailSectionTitle" android:text="Description" />
                <TextView
                    android:id="@+id/tv_product_detail_description"
                    style="@style/DetailValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="4dp"
                    tools:text="Modern fully-furnished flat with parking &amp; WiFi. Spacious living area, modular kitchen, and scenic views from the balcony. Ideal for families and working professionals looking for a comfortable and convenient living space." />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider style="@style/DetailSectionDivider"/>

            <!-- Amenities -->
            <LinearLayout style="@style/DetailSectionContainer">
                <TextView style="@style/DetailSectionTitle" android:text="Amenities" />
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_facilities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:chipSpacingVertical="4dp">
                    
                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="WiFi"
                        style="@style/Widget.MaterialComponents.Chip.Entry"/>
                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Parking"
                        style="@style/Widget.MaterialComponents.Chip.Entry"/>
                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Lift"
                        style="@style/Widget.MaterialComponents.Chip.Entry"/>
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
            
            <com.google.android.material.divider.MaterialDivider style="@style/DetailSectionDivider"/>

            <!-- Tags -->
            <LinearLayout style="@style/DetailSectionContainer">
                <TextView style="@style/DetailSectionTitle" android:text="Tags" />
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:chipSpacingVertical="4dp">
                    
                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Family Friendly"
                        style="@style/Widget.MaterialComponents.Chip.Entry"/>
                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Luxury"
                        style="@style/Widget.MaterialComponents.Chip.Entry"/>
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider style="@style/DetailSectionDivider"/>

            <!-- Pricing Details -->
            <LinearLayout style="@style/DetailSectionContainer">
                <TextView style="@style/DetailSectionTitle" android:text="Pricing Details" />
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:stretchColumns="1">
                    <TableRow android:layout_marginBottom="4dp">
                        <TextView android:text="Base Rent:" style="@style/DetailLabel" />
                        <TextView android:id="@+id/tv_product_detail_base_price" style="@style/DetailValue.Bold" tools:text="â‚¹50,000 per month" />
                    </TableRow>
                    <TableRow android:layout_marginBottom="4dp">
                        <TextView android:text="Security Deposit:" style="@style/DetailLabel" />
                        <TextView android:id="@+id/tv_product_detail_security_deposit" style="@style/DetailValue" tools:text="â‚¹1,00,000" />
                    </TableRow>
                     <TableRow android:layout_marginBottom="4dp">
                        <TextView android:text="Maintenance:" style="@style/DetailLabel" />
                        <TextView android:id="@+id/tv_product_detail_maintenance_fee" style="@style/DetailValue" tools:text="â‚¹2,000 per month" />
                    </TableRow>
                    <TableRow android:layout_marginBottom="4dp">
                        <TextView android:text="Cleaning Fee:" style="@style/DetailLabel" />
                        <TextView android:id="@+id/tv_product_detail_cleaning_fee" style="@style/DetailValue" tools:text="â‚¹1,000 (one-time)" />
                    </TableRow>
                    <TableRow android:layout_marginBottom="4dp">
                        <TextView android:text="Discount:" style="@style/DetailLabel"/>
                        <TextView android:id="@+id/tv_product_detail_discount" style="@style/DetailValue" tools:text="5% off first month" />
                    </TableRow>
                    <TableRow>
                        <TextView android:text="Negotiable:" style="@style/DetailLabel"/>
                        <TextView android:id="@+id/tv_product_detail_negotiable" style="@style/DetailValue" tools:text="Yes" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider style="@style/DetailSectionDivider"/>

            <!-- House Rules -->
            <LinearLayout style="@style/DetailSectionContainer">
                <TextView style="@style/DetailSectionTitle" android:text="House Rules" />
                <TextView
                    android:id="@+id/tv_product_detail_rules"
                    style="@style/DetailValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="No Smoking indoors.\nSmall pets considered upon approval." />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider style="@style/DetailSectionDivider"/>

            <!-- Nearby Places -->
            <LinearLayout style="@style/DetailSectionContainer">
                <TextView style="@style/DetailSectionTitle" android:text="Nearby Places" />
                <TextView
                    android:id="@+id/tv_product_detail_nearby"
                    style="@style/DetailValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Beach: 200m\nShopping Mall: 1km\nInternational Airport: 15km" />
            </LinearLayout>
            
            <com.google.android.material.divider.MaterialDivider style="@style/DetailSectionDivider"/>

            <!-- Availability -->
            <LinearLayout style="@style/DetailSectionContainer">
                <TextView style="@style/DetailSectionTitle" android:text="Availability" />
                <TextView
                    android:id="@+id/tv_product_detail_availability"
                    style="@style/DetailValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="From: 2025-01-01 To: 2025-12-31" />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <!-- Owner Info -->
            <LinearLayout style="@style/DetailSectionContainer">
                <TextView style="@style/DetailSectionTitle" android:text="Owner Information" />
                <TextView
                    android:id="@+id/tv_product_detail_owner_status"
                    style="@style/DetailValue"
                    tools:text="Verified Owner" />
                
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider style="@style/DetailSectionDivider"/>

            <!-- Similar Products Section -->
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Similar Products"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:layout_marginBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_similar_products"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:listitem="@layout/item_rental"
                    tools:itemCount="3"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_contact_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:srcCompat="@android:drawable/ic_dialog_email" 
        android:contentDescription="Contact Owner" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>